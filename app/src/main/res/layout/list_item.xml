<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:contentPadding="0dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="0dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:id="@+id/list_item_card"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:id="@+id/list_item_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="20sp"
                android:elevation="2dp"
                android:singleLine="true"
                android:textColor="#fff"
                android:paddingLeft="4dp"
                android:id="@+id/list_item_name"
                android:background="#3000"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Found"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/list_item_text"
                    android:textColor="@color/text_color"
                    android:paddingLeft="@dimen/list_item_text_padding"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_item_text_big"
                    android:textColor="@color/text_color"
                    android:id="@+id/list_item_date"
                    android:paddingLeft="@dimen/list_item_text_padding"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Breed"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/list_item_text"
                    android:textColor="@color/text_color"
                    android:paddingLeft="@dimen/list_item_text_padding"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_item_text_big"
                    android:singleLine="true"
                    android:id="@+id/list_item_breed"
                    android:paddingLeft="@dimen/list_item_text_padding"
                    android:textColor="@color/text_color" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/list_item_text"
                    android:textColor="@color/text_color"
                    android:paddingLeft="@dimen/list_item_text_padding"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_item_text_big"
                    android:text="Gender"
                    android:textColor="@color/text_color"
                    android:id="@+id/list_item_gender"
                    android:paddingLeft="@dimen/list_item_text_padding"/>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>